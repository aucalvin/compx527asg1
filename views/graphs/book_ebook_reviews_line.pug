canvas(id='myChart')
    script.
        let usCustomers = !{book_reviews};
        let ebookReviews = !{ebook_reviews};
        
        let years = !{years};
        console.log(ebookReviews);

        var config = {
            type: 'line',
            data: {
                labels: years,
                datasets: [{
                    label: 'book reviews',
                    backgroundColor: window.chartColors.red,
                    borderColor: window.chartColors.red,
                    data: usCustomers,
                    fill: false,
                },
                    {
                        label: 'ebook reviews',
                        backgroundColor: window.chartColors.blue,
                        borderColor: window.chartColors.blue,
                        data: ebookReviews,
                        fill: false,
                    }
                ]
            },
            options: {
                responsive: true,
                title: {
                    display: true,
                    text: 'Chart.js Line Chart'
                },
                tooltips: {
                    mode: 'index',
                    intersect: false,
                },
                hover: {
                    mode: 'nearest',
                    intersect: true
                },
                scales: {
                    x: {
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Month'
                        }
                    },
                    y: {
                        display: true,
                        scaleLabel: {
                            display: true,
                            labelString: 'Value'
                        }
                    }
                }
            }
        };

        var ctx = document.querySelector('#myChart').getContext('2d');
        line = new Chart(ctx, config);